{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-File",
                "test.ps1"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Choose country",
            "type": "shell",
            "command": "echo",
            "args": [
                "${input:country} ${input:version}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "country",
            "description": "Kies een land",
            "default": "België",
            "options": [
                "Nederland",
                "België"
            ]
        },
        {
            "type": "pickString",
            "id": "version",
            "description": "Kies een versie",
            "default": "23.0",
            "options": [
                "21.0",
                "22.0",
                "23.0",
                "23.1"
            ]
        }
    ]
}